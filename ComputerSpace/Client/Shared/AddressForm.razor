@inject IAddressService AddressService

@if (address == null)
{
    <MudText>You haven't specified a delivery address, yet.</MudText>
    <MudButton ButtonType="ButtonType.Button" @onclick="InitAddress" Variant="Variant.Filled" DisableElevation="true" Color="Color.Primary" Size="Size.Medium" Class="mt-2">Add an address?</MudButton>
}
else if (!editAddress)
{
    <MudText>@address.FirstName @address.LastName</MudText>
    <MudText>@address.Street</MudText>
    <MudText>@address.City, @address.State, @address.Zip</MudText>
    <MudText>@address.Country</MudText>
    <MudButton ButtonType="ButtonType.Button" @onclick="EditAddress" Variant="Variant.Filled" DisableElevation="true" Color="Color.Primary" Size="Size.Medium" Class="mt-2">Edit</MudButton>
}
else
{
    <EditForm Model="address" OnSubmit="SubmitAddress">
        <MudGrid>
            <MudItem xs="6">
                <MudTextField T="string" Label="First name" @bind-Value="address.FirstName" />
            </MudItem>
            <MudItem xs="6">
                <MudTextField T="string" Label="Last name" @bind-Value="address.LastName" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField T="string" Label="Street" @bind-Value="address.Street" />
            </MudItem>
            <MudItem xs="6">
                <MudTextField T="string" Label="City" @bind-Value="address.City" />
            </MudItem>
            <MudItem xs="6">
                <MudTextField T="string" Label="State" @bind-Value="address.State" />
            </MudItem>
            <MudItem xs="6">
                <MudTextField T="string" Label="Country" @bind-Value="address.Country" />
            </MudItem>
            <MudItem xs="6">
                <MudTextField T="string" Label="ZIP/Postal Code" @bind-Value="address.Zip" />
            </MudItem>
            <MudItem xs="12" Class="d-flex justify-center">
                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" DisableElevation="true" Color="Color.Primary" Size="Size.Large" Class="mt-8">Save</MudButton>
            </MudItem>
        </MudGrid>
    </EditForm>
}
@code {
    Address address = null;
    bool editAddress = false;

    protected override async Task OnInitializedAsync()
    {
        address = await AddressService.GetAddress();
    }

    private async Task SubmitAddress()
    {
        editAddress = false;
        address = await AddressService.AddOrUpdateAddress(address);
    }

    private void InitAddress()
    {
        address = new Address();
        editAddress = true;
    }

    private void EditAddress()
    {
        editAddress = true;
    }
}