@inject ILocalStorageService LocalStorage
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@inject ICartService CartService

<MudMenu Icon="@Icons.Filled.Person" AnchorOrigin="Origin.BottomLeft" TransformOrigin="Origin.TopLeft">
    <AuthorizeView>
        <Authorized>
            <MudMenuItem href="profile">Profile</MudMenuItem>
            <MudMenuItem href="orders">Orders</MudMenuItem>
            <AdminMenu />
            <MudMenuItem @onclick="Logout">Logout</MudMenuItem>
        </Authorized>
        <NotAuthorized>
            <MudMenuItem href="login">Login</MudMenuItem>
            <MudMenuItem href="register">Register</MudMenuItem>
        </NotAuthorized>
    </AuthorizeView>
</MudMenu>


@code {
    private async Task Logout()
    {
        await LocalStorage.RemoveItemAsync("authToken");
        await CartService.GetCartItemsCount();
        await AuthenticationStateProvider.GetAuthenticationStateAsync();
        NavigationManager.NavigateTo("");
    }
}
